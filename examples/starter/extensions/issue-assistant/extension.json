{
  "schema_version": 1,
  "id": "issue-assistant",
  "version": "1.0.0",
  "runtime": "process",
  "entrypoint": "runtime.sh",
  "hooks": [
    "run-start",
    "run-end"
  ],
  "permissions": [
    "run-commands"
  ],
  "tools": [
    {
      "name": "issue_triage",
      "description": "Classify issue priority",
      "parameters": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          }
        },
        "required": [
          "title"
        ],
        "additionalProperties": false
      }
    }
  ],
  "commands": [
    {
      "name": "/triage-now",
      "description": "Run triage workflow",
      "usage": "/triage-now <issue-number>"
    }
  ],
  "timeout_ms": 5000
}
